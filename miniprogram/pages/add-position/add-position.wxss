.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding: 20rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: var(--text-primary);
}

.search-input {
  display: flex;
  gap: 12rpx;
}

.input {
  flex: 1;
}

.region-selector {
  display: flex;
  gap: 8rpx;
}

.region-btn {
  padding: 12rpx 20rpx;
  background: var(--bg-color);
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: var(--text-regular);
}

.region-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: #ffffff;
}

.search-btn {
  width: 100%;
  margin-top: 20rpx;
}

.search-result {
  padding: 20rpx;
  background: var(--bg-color);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.result-code {
  font-size: 24rpx;
  color: var(--text-light);
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
}
