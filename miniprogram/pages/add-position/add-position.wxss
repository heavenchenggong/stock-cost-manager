.container {
  min-height: 100vh;
  background: var(--bg-color);
  padding: 20rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: 600;
  text-align: center;
  margin-bottom: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
  color: var(--text-primary);
}

.search-input {
  display: flex;
  gap: 12rpx;
}

.input {
  flex: 1;
}

.region-selector {
  display: flex;
  gap: 12rpx;
  margin-top: 8rpx;
}

.region-btn {
  padding: 16rpx 24rpx;
  background: #ffffff;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333333;
  min-width: 120rpx;
  text-align: center;
  transition: all 0.3s;
}

.region-btn.active {
  background: #1989fa;
  border-color: #1989fa;
  color: #ffffff;
  font-weight: 600;
}

.search-btn {
  width: 100%;
  margin-top: 24rpx;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: #1989fa !important;
  color: #ffffff !important;
  font-size: 30rpx !important;
  padding: 24rpx !important;
  border-radius: 8rpx !important;
}

.search-btn[disabled] {
  opacity: 0.5;
  background: #cccccc !important;
}

.search-result {
  padding: 20rpx;
  background: #ffffff;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.result-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.result-code {
  font-size: 24rpx;
  color: var(--text-light);
}

.submit-btn {
  width: 100%;
  margin-top: 40rpx;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  background: #07c160 !important;
  color: #ffffff !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  padding: 28rpx !important;
  border-radius: 8rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3) !important;
}

.submit-btn[disabled] {
  opacity: 0.5;
  background: #cccccc !important;
}
