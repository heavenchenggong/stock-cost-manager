/* app.wxss - 全局样式 */

/* 主题色 */
:root {
  --primary-color: #1989fa;
  --success-color: #07c160;
  --warning-color: #ff976a;
  --danger-color: #ee0a24;
  --text-primary: #323233;
  --text-regular: #646566;
  --text-light: #969799;
  --border-color: #ebedf0;
  --bg-color: #f7f8fa;
  --card-bg: #ffffff;
}

/* 基础重置 */
page {
  background-color: var(--bg-color);
  color: var(--text-primary);
  font-size: 28rpx;
  line-height: 1.6;
}

/* 股票涨跌色（国内习惯）*/
.stock-up {
  color: #ee0a24 !important;
}

.stock-down {
  color: #07c160 !important;
}

.stock-flat {
  color: var(--text-light) !important;
}

/* 卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s;
}

.btn-primary {
  background: var(--primary-color);
  color: #ffffff;
}

.btn-success {
  background: var(--success-color);
  color: #ffffff;
}

.btn-danger {
  background: var(--danger-color);
  color: #ffffff;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--border-color);
  color: var(--text-regular);
}

/* 输入框样式 */
.input {
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #ffffff;
}

.input:focus {
  border-color: var(--primary-color);
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-row {
  flex-direction: row;
}

.flex-col {
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

/* 文本样式 */
.text-bold {
  font-weight: 600;
}

.text-sm {
  font-size: 24rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

.text-primary {
  color: var(--primary-color);
}

.text-light {
  color: var(--text-light);
}

/* 分割线 */
.divider {
  height: 2rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: var(--text-light);
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-light);
}

/* 工具类 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
